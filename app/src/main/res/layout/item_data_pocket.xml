<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/descriptionPocket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_data_description"
        android:text="@string/_160_data_description"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:lines="2"
        android:layout_weight="0.75"/>

    <TextView
        android:id="@+id/amountPocket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_data_amount"
        android:text="@string/_160_data_amount"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:lines="2"
        android:layout_weight="0.25"/>

</LinearLayout>